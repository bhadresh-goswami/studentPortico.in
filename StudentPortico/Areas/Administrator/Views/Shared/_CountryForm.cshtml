<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
        <input type="hidden" value="" id="countryId" />
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Add New Country Details</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-10 col-md-offset-1">
                        <div class="form-horizontal">
                            <div class="form-group">
                                <label for="CountryName" class="control-label">
                                    Enter Country Name:
                                </label>
                                <input type="text" name="CountryName" id="CountryName" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="CountryEnabled" class="control-label">
                                    Is Country Enabled:
                                </label>
                                <select id="CountryIsEnabled" class="form-control">
                                    <option value="true">Yes Enabled</option>
                                    <option value="false">Not Enabled</option>
                                </select>
                            </div>

                        </div>

                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary save" id="btnSave">Save Data</button>
                <button type="button" class="btn btn-info edit" id="btnUpdate">Update Data</button>
                <button type="button" class="btn btn-danger edit" id="btnDelete">Delete Data</button>

                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

        <script>
            $("#btnSave").click(function () {

                var cname = $("#CountryName").val();
                var isE = $("#CountryIsEnabled").val();

                $.ajax({

                    url: "http://localhost:54701/dashboard/CountryManage/addCountryDetails",
                    method: "POST",
                    data: { CountryName: cname, CountryIsEnabled: isE },
                    success: function (res) {
                        alert(res);
                        loadData();
                    },
                    error: function (err) {
                        alert(err.statusText);
                    }

                });
                $("#myModal").modal("hide");
            });


            $("#btnUpdate").click(function () {

                var cname = $("#CountryName").val();
                var isE = $("#CountryIsEnabled").val();
                var countryId = $("#countryId").val();
                $.ajax({

                    url: "http://localhost:54701/dashboard/CountryManage/updateCountryDetails",
                    method: "POST",
                    data: { CountryName: cname, CountryIsEnabled: isE, countryId: countryId },
                    success: function (res) {
                        alert(res);
                        loadData();
                    },
                    error: function (err) {
                        alert(err.statusText);
                    }

                });
                $("#myModal").modal("hide");
            });

            $("#btnDelete").click(function () {

              
                var countryId = $("#countryId").val();
                $.ajax({

                    url: "http://localhost:54701/dashboard/CountryManage/deleteCountryDetails/" + countryId,
                    method: "DELETE",
                    
                    success: function (res) {
                        alert(res);
                        loadData();
                    },
                    error: function (err) {
                        alert(err.statusText);
                    }

                });
                $("#myModal").modal("hide");
            });
        </script>
    </div>
</div>

